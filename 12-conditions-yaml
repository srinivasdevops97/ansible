- name: check the number is less than 10 or not
  hosts: local
  connection: local
  vars_prompt:
  - name: please enter the number
    private: false # not confidential
  tasks:
  - name: print this if less than 10
    ansible.builtin.debug:
      msg: "Given number {{ number }} is less than 10"
    when: my_number < 10 # conditional expression

  - name: print this if greater than or equal to 10
    ansible.builtin.debug:
      msg: "given numner {{ number }} greater than or equal to 10"
    when: my_number >= 10
    
    
  